{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h3>Article numéro {{ article.id }}</h3>
    {{ article.date }}
    <p> Ecrit par : {{ article.auteur }} ,  Edité par : {{ article.edition }} </p>
    <h2>{{ article.titre }} </h2>
    <p> {{ article.contenu }} </p>

    <a href="{{ path('article_index') }}">Retour à la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
